@model Tuple<List<HGV.AD.Web.Models.Attributes.HeroAttributes>, List<HGV.AD.Web.Models.Trends.HeroStatBase>, List<HGV.AD.Web.Models.Trends.HeroStatBase>>

@{
    ViewData["Title"] = "Heroes";
}

<h2>Heroes</h2>

<hr />

<section>
    <h4 class="text-center">Stats</h4>
    <table id="tblHeroes" class="table table-condensed table-striped  display nowrap" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Icon
                </th>

                <th>
                    BaseStr
                </th>
                <th>
                    StrGain
                </th>
                <th>
                    BaseAgi
                </th>
                <th>
                    AgiGain
                </th>
                <th>
                    BaseInt
                </th>
                <th>
                    IntGain
                </th>
                <th>
                    HP
                </th>
                <th>
                    HPRegen
                </th>
                <th>
                    Mana
                </th>
                <th>
                    Armor
                </th>
                <th>
                    Dmg
                </th>
                <th>
                    Movespeed
                </th>
                <th>
                    Range
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Item1)
            {
                <tr>
                    <td>
                        <a asp-area="" asp-controller="Heroes" asp-action="Details" asp-route-id="@item.HeroId">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </td>
                    <td>
                        <a asp-area="" asp-controller="Heroes" asp-action="Details" asp-route-id="@item.HeroId">
                            @*<img src="@string.Format("http://cdn.dota2.com/apps/dota2/images/heroes/{0}_hphover.png?v=3581135", item.Identity)" height="35" />*@
                            <img src="@string.Format("/images/heroes/{0}.png", item.Identity)" height="35" />
                        </a>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.BaseStr)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StrGain)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BaseAgi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AgiGain)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BaseInt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IntGain)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mana)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HPRegen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Armor)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.MaxDmg) - @Html.DisplayFor(modelItem => item.MinDmg)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Movespeed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Range)
                    </td>
                </tr>
        }
        </tbody>
    </table>
</section>



@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblHeroes').DataTable({
                "scrollX": true,
                "pagingType": "simple",
                "dom": "<'row'<'col-sm-6'i><'col-sm-6'f>><'row'<'col-sm-12'tr>><'row'<'col-sm-5'l><'col-sm-7'p>>",
            });
        });
    </script>
}