@using Microsoft.AspNetCore.Identity
@using HGV.AD.Web.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{ 
    var username = @User.Claims.Where(_ => _.Type == "steam:persona").Select(_ => _.Value).FirstOrDefault() ?? "[Unknown]";
    var profileUrl = @User.Claims.Where(_ => _.Type == "steam:profile").Select(_ => _.Value).FirstOrDefault() ?? "#";
}

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="@profileUrl" target="_blank">@username</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <form asp-area="" asp-controller="Account" asp-action="ExternalLogin" method="post" id="loginForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <button type="submit" class="btn btn-link" id="Steam" name="provider" value="Steam" title="Log in using your Steam account">
                    <img src="~/images/steam/sits_small.png" />
                </button>
            </li>
        </ul>
    </form>
}