<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HGV</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://bootswatch.com/cyborg/bootstrap.min.css" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/dt-1.10.12/fc-3.2.2/datatables.min.css" />

<environment names="Development">
    <link rel="stylesheet" href="/css/dota-ability-tooltip.css" />
    <link rel="stylesheet" href="/css/site.css" />
</environment>
<environment names="Staging,Production">
    <link rel="stylesheet" href="/css/dota-ability-tooltip.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/site.min.css" asp-append-version="true" />
</environment>
    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mainNav">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a asp-area="" asp-controller="Info" asp-action="Index" class="navbar-brand">
                    High Ground Vision <small>AD</small>
                </a>

            </div>
            <div id="mainNav" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Info <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a asp-area="" asp-controller="Info" asp-action="Guide">Guide</a></li>
                            <li><a asp-area="" asp-controller="Info" asp-action="Illusions">Illusions</a></li>
                        </ul>
                    </li>
                    <li><a asp-area="" asp-controller="Heroes" asp-action="Index">Heroes</a></li>
                    <li><a asp-area="" asp-controller="Abilities" asp-action="Index">Abilities</a></li>
                    <li><a asp-area="" asp-controller="Draft" asp-action="Index">Draft</a></li>
                </ul>
                
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="body-content">
        <div id="render-target" class="container">
            @RenderBody()
        </div>
    </div>
    
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-sm-4 text-center">

                    <h3>
                        <img src="~/images/logo/Wards.jpg" width="50" class="img-rounded" /> 
                        HGV 
                        <small>AD</small>
                    </h3>

                    <ul class="list-inline">
                        <li>
                            <a asp-area="" asp-controller="Info" asp-action="Index" class="text-info">Home</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Info" asp-action="About" class="text-info">About</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Info" asp-action="History" class="text-info">History</a>
                        </li>
                    </ul>

                    <p>
                        &copy; @DateTime.Today.Year - <a href="http://venatiostudios.com/">Venatio Studios</a>
                    </p>
                </div>
                <div class="col-sm-4">
                    <ul class="list-unstyled hidden-xs">
                        <li>
                            <h3>
                                <i class="fa fa-twitter"></i> 
                                <small>
                                    <a href="https://twitter.com/DotaHGV" target="_blank">@@DotaHGV</a>
                                </small>
                            </h3>
                        </li>
                        <li>
                            <h3>
                                <i class="fa fa-github"></i>
                                <small>
                                    <a href="https://github.com/HighGroundVision/Desolator" target="_blank">High Ground Vision</a>
                                </small>
                            </h3>
                        </li>
                    </ul>
                    <ul class="list-inline visible-xs text-center">
                        <li>
                            <h3>
                                <a href="https://twitter.com/DotaHGV" target="_blank"><i class="fa fa-twitter"></i></a>
                            </h3>
                        </li>
                        <li>
                            <h3>
                                <a href="https://github.com/HighGroundVision/Desolator" target="_blank"><i class="fa fa-github"></i></a>
                            </h3>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-4"> <!-- -->
                    <div class="hidden-xs">
                        <h5>
                            Be a good support
                        </h5>
                        <p class="hidden-sm">
                            Your donations are greatly appreciated. It cost us about $100 / month on avg to run this site. Help keep the site alive and support new features.
                        </p>
                    </div>
                    <div class="text-center">
                        @*
                        <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
                            <input type="hidden" name="cmd" value="_s-xclick">
                            <input type="hidden" name="hosted_button_id" value="5RMUY7VTZQAJW">
                            <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donate_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                            <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
                        </form>
                        *@
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.1.0.min.js" integrity="sha256-cCueBR6CsyA4/9szpPfrX3s49M9vUU5BgtiJj06wt/s=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs/dt-1.10.12/fc-3.2.2/datatables.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.bundle.min.js"></script>

<environment names="Development">   
    <script src="/js/site.js"></script>
</environment>
<environment names="Staging,Production">
    <script src="/js/site.min.js" asp-append-version="true"></script>
</environment>

    @RenderSection("scripts", required: false)
</body>
</html>
